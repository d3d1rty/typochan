- @boards = Board.all.order(priority: :asc)
- @pages = Page.all.order(priority: :asc)
%nav
  %p
    %span
      - @pages.each do |page|
        = link_to page.title, page_path(page)
        \/
      - if signed_in? && (current_user.admin? || current_user.mod?)
        = link_to 'Dashboard', dashboard_path
        \/
      - if signed_in?
        = link_to 'Sign out', sign_out_path, method: :delete, class: 'nav-link text-center'
      - else
        - if Clearance.configuration.allow_sign_up?
          = link_to 'Sign up', sign_up_path
          \/
        = link_to 'Sign in', sign_in_path
      \/

    %span
      Boards:
      \
      - @boards.each_with_index do |board, count|
        - if count == 0
          \|
        = link_to board.short_name, board_path(board), class: 'nav-boards'
        \|
