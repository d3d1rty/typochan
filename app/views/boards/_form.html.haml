= form_for @board do |form|
  .form
    - if flash[:errors]
      #new-page-form-errors.form-errors
        %ul
          - flash[:errors].each do |error|
            %li= error
    .form-group
      = form.label :name
      = form.text_field :name
    .form-group
      = form.label :short_name
      = form.text_field :short_name
    .form-group
      = form.label :priority
      = form.number_field :priority
    .form-group
      = form.label :description
      = form.text_area :description
    .form-action
      = form.submit 'Save'
