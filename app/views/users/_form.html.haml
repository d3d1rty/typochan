= form_for @user do |form|
  = invisible_captcha
  .form-group
    = form.label :email
    = form.text_field :email, type: 'email'
  .form-group
    = form.label :handle
    = form.text_field :handle, type: 'text'
  .form-group
    = form.label :password
    = form.password_field :password
  .form-action
    = form.submit
